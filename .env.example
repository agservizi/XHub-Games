# Xbox Games Catalog - Environment Configuration Example
# Copy this file to .env and modify with your settings

# Database Configuration
DB_HOST=localhost
DB_NAME=xbox_games_catalog
DB_USER=root
DB_PASSWORD=

# Application Settings
APP_NAME="Xbox Games Catalog"
APP_URL=http://localhost:8000
APP_ENV=development

# Security
SESSION_LIFETIME=7200
CSRF_TOKEN_NAME=_token

# Upload Settings (for future file upload feature)
MAX_FILE_SIZE=5MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# API Settings (for future API integration)
XBOX_API_KEY=
IGDB_API_KEY=

# Email Settings (for future notification feature)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=

# Cache Settings
CACHE_ENABLED=false
CACHE_LIFETIME=3600

# Debug Settings
DEBUG_MODE=true
LOG_ERRORS=true
DISPLAY_ERRORS=true
